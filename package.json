{
  "name": "restaurant-print-agent",
  "version": "1.0.0",
  "description": "Local print agent for restaurant POS system",
  "main": "local-print-agent.js",
  "scripts": {
    "start": "node local-print-agent.js",
    "dev": "nodemon local-print-agent.js",
    "build-electron": "electron-builder",
    "start-electron": "electron .",
    "setup-autostart": "node auto-start.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "net": "^1.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.restaurant.printagent",
    "productName": "Restaurant Print Agent",
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  }
}
